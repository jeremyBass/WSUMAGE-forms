<?xml version="1.0"?>
<config>
	<modules>
		<Wsu_WebForms>
			<version>0.1.0</version>
		</Wsu_WebForms>
	</modules>
	<frontend>
		<routers>
			<webforms>
				<use>standard</use>
				<args>
					<module>Wsu_WebForms</module>
					<frontName>webforms</frontName>
				</args>
			</webforms>
			<contacts>
				<args>
					<modules>
						<Wsu_WebForms before="Mage_Contacts">Wsu_WebForms_Contacts</Wsu_WebForms>
					</modules>
				</args>
			</contacts>
			<layout>
				<updates>
					<webforms>
						<file>webforms.xml</file>
					</webforms>
				</updates>
			</layout>
			<translate>
				<modules>
					<Wsu_WebForms>
						<files>
							<default>Wsu_WebForms.csv</default>
						</files>
					</Wsu_WebForms>
				</modules>
			</translate>
		</routers>
	</frontend>
	<admin>
		<routers>
			<webforms>
				<use>admin</use>
				<args>
					<module>Wsu_WebForms</module>
					<frontName>webforms</frontName>
				</args>
			</webforms>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<webforms>
					<file>webforms.xml</file>
				</webforms>
			</updates>
		</layout>
		<translate>
			<modules>
				<Wsu_WebForms>
					<files>
						<default>Wsu_WebForms.csv</default>
					</files>
				</Wsu_WebForms>
			</modules>
		</translate>
		<menu>
			<cms translate="title" module="cms">
				<children>
					<webforms module="webforms">
						<title>Forms</title>
						<sort_order>77</sort_order>
					</webforms>
				</children>
			</cms>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<cms>
							<children>
								<webforms>
									<title>Forms Module</title>
									<sort_order>10</sort_order>
								</webforms>
							</children>
						</cms>
						<system>
							<children>
								<config>
									<children>
										<webforms>
											<title>Forms Settings Configuration</title>
										</webforms>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<global>
		<models>
			<webforms>
				<class>Wsu_WebForms_Model</class>
				<resourceModel>webforms_mysql4</resourceModel>
			</webforms>
			<webforms_mysql4>
				<class>Wsu_WebForms_Model_Mysql4</class>
				<entities>
					<webforms>
						<table>webforms</table>
					</webforms>
					<fields>
						<table>webforms_fields</table>
					</fields>
					<fieldsets>
						<table>webforms_fieldsets</table>
					</fieldsets>
					<results>
						<table>webforms_results</table>
					</results>
					<results_values>
						<table>webforms_results_values</table>
					</results_values>
					<store>
						<table>webforms_store</table>
					</store>
					<message>
						<table>webforms_message</table>
					</message>

				</entities>
			</webforms_mysql4>
		</models>
	</global>
</config>